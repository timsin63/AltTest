<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/dialog_header"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="@dimen/control_icons_size"
            android:layout_height="@dimen/control_icons_size"
            android:background="@drawable/share"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_gravity="right"
            />

        <ImageButton
            android:id="@+id/btn_export"
            android:layout_width="@dimen/control_icons_size"
            android:layout_height="@dimen/control_icons_size"
            android:background="@drawable/export"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_gravity="right"
            />

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="@dimen/control_icons_size"
            android:layout_height="@dimen/control_icons_size"
            android:background="@drawable/edit"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_gravity="right"
            />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/control_icons_size"
            android:layout_height="@dimen/control_icons_size"
            android:background="@drawable/delete"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_gravity="right" />
    </LinearLayout>

    <TextView
        android:id="@+id/note_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold|italic"/>


    <TextView
        android:id="@+id/note_info_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="@dimen/content_text_size"
        android:padding="@dimen/activity_vertical_margin"
        />

    <ImageView
        android:id="@+id/dialog_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"/>
</LinearLayout>